var webName="路条编程";

var address="北京市朝阳区";

var str = webName;
	str += "位于";
	str += address;
	str += "！";

var strLength = str.length;

console.log(strLength); // ==> 13
var firstLetter = str[0];
console.log(firstLetter); // ==> 路

var lastLetter = str[ str.length -1];
console.log(lastLetter); // ==> !
